#!/bin/bash
# Runtime startup script - just starts services since setup is done during build

echo "ğŸš€ Starting Outline runtime services..."

# Just ensure services are ready (they should start via dinit)
echo "â³ Waiting for services..."
for i in {1..30}; do
    if pg_isready -h localhost -p 5432 -U outline >/dev/null 2>&1 && redis-cli ping >/dev/null 2>&1; then
        echo "âœ… Services ready!"
        break
    fi
    echo "   Waiting for services... ($i/30)"
    sleep 2
done

echo "ğŸ‰ Outline runtime ready!"
echo "ğŸŒ Access: http://localhost:3000"
echo "ğŸ“§ SMTP: watch-emails to see login links"
echo "ğŸ–¥ï¸  VNC: http://localhost:6080/vnc.html"