#!/bin/bash
# Outline CLI - Wrapper script for export/import operations

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

usage() {
    echo "Outline CLI - Export/Import Tool"
    echo ""
    echo "Usage: $0 <command> [options]"
    echo ""
    echo "Commands:"
    echo "  export       Export Outline workspace (direct database)"
    echo "  api-export   Export via Outline API (like web UI)"
    echo "  import       Import Outline workspace"
    echo "  help         Show this help"
    echo ""
    echo "Export Methods:"
    echo "  export       - Direct database export (faster, requires DB access)"
    echo "  api-export   - Uses Outline's API (requires API token)"
    echo ""
    echo "Examples:"
    echo "  $0 export -d /tmp/my-backup"
    echo "  $0 api-export -t your-api-token -o /tmp/downloads"
    echo "  $0 import -d /tmp/my-backup --force"
    echo ""
    echo "For command-specific help:"
    echo "  $0 export --help"
    echo "  $0 api-export --help"
    echo "  $0 import --help"
}

check_environment() {
    # Check if we're in the right environment
    if [[ ! -f "/home/ubuntu/outline/package.json" ]]; then
        echo -e "${YELLOW}[WARN]${NC} Not running in Outline container environment"
        echo "Make sure DATABASE_URL is set correctly"
    fi
    
    # Set default DATABASE_URL if not set
    if [[ -z "$DATABASE_URL" ]]; then
        if [[ -f "/home/ubuntu/outline/.env" ]]; then
            export DATABASE_URL=$(grep "DATABASE_URL=" /home/ubuntu/outline/.env | cut -d'=' -f2- | tr -d '"')
        fi
        
        if [[ -z "$DATABASE_URL" ]]; then
            echo -e "${RED}[ERROR]${NC} DATABASE_URL not found. Please set it or run from Outline container."
            exit 1
        fi
    fi
}

case "${1:-}" in
    export)
        check_environment
        shift
        exec "$SCRIPT_DIR/outline-export" "$@"
        ;;
    api-export)
        # API export doesn't need database access
        shift
        exec "$SCRIPT_DIR/outline-api-export" "$@"
        ;;
    import)
        check_environment
        shift
        exec "$SCRIPT_DIR/outline-import" "$@"
        ;;
    help|--help|-h)
        usage
        exit 0
        ;;
    "")
        echo -e "${RED}[ERROR]${NC} No command specified"
        echo ""
        usage
        exit 1
        ;;
    *)
        echo -e "${RED}[ERROR]${NC} Unknown command: $1"
        echo ""
        usage
        exit 1
        ;;
esac