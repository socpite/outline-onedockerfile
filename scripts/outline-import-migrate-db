#!/bin/bash
# Outline Database Migration Script
# Ensures database schema is ready for imports

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

log() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

warn() {
    echo -e "${YELLOW}[WARN]${NC} $1"
}

error() {
    echo -e "${RED}[ERROR]${NC} $1"
    exit 1
}

# Check if we're in the right environment
if [[ ! -f "/home/ubuntu/outline/package.json" ]]; then
    warn "Not running in Outline container environment"
    warn "Make sure you're running this inside the Outline container"
fi

# Check for DATABASE_URL
if [[ -z "${DATABASE_URL:-}" ]]; then
    if [[ -f "/home/ubuntu/outline/.env" ]]; then
        export DATABASE_URL=$(grep "DATABASE_URL=" /home/ubuntu/outline/.env | cut -d'=' -f2- | tr -d '"')
    fi
    
    if [[ -z "${DATABASE_URL:-}" ]]; then
        error "DATABASE_URL environment variable is required"
    fi
fi

log "Running database migrations..."
log "Database URL: ${DATABASE_URL}"

# Change to outline directory
cd /home/ubuntu/outline

# Run migrations
if yarn db:migrate; then
    success "Database migrations completed successfully"
    echo ""
    echo "ðŸŽ‰ Database is now ready for imports!"
    echo "You can now run your import command."
else
    error "Database migrations failed"
fi 